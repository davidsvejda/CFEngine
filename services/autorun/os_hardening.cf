bundle agent os_hardening
{
  vars:
    any::
      "sshd_config[Protocol]" 		string => "2";
      "sshd_config[PermitRootLogin]" 	string => "no";
      "sshd_config[LogLevel]" 		string => "DEBUG";

  files:
    any::
      "/etc/ssh/sshd_config"
	perms => mog("755", "root", "root"),      
        edit_line => set_config_values("sshd_config");
}

