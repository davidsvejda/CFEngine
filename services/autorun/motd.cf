bundle agent motd
{
  methods:
    "Modify the motd, issue and issue.net" usebundle => edit_motd;

  vars:
    "motd" string => "This system is managed CFEngine 3";
 
  files:
    "/etc/motd",
      create => "true",
    "/etc/issue",
      create => "true",
    "/etc/issue.net",
      create => "true";

  reports:
    "Motd is about to be modified";
} 


